@page
@model PaymentSystemPrototype.Pages.Profiles.UserList

@{
    Layout = "Shared/_Layout";
}
<h2>User List</h2>
<table>
    <thead>
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
        <th>
            Role
        </th>
        <th>
            Register date
        </th>
        <th>
            Actions
        </th>
    </tr>
    </thead>
    <tbody>
    
    @foreach (var user in Model.ListUsers)
    {
        <tr>
            <td>
                @user.FirstName
            </td>
            <td>
                @user.LastName
            </td>
            <td>
                @user.Email
            </td>
            @{
                var role = Model.ListRoles.FirstOrDefault(r => r.Id == 
                                                               Model.ListUserRoles.FirstOrDefault(
                                                                   ur => ur.UserId == user.Id)!.RoleId)?.Name;
                <td>
                    @role
                </td>
            }
            <td>
                @user.RegisteredAt
            </td>
            <td>
                <a asp-page="ModifyData" asp-route-userId="@user.Id">Edit Data</a> |
                <a asp-page="AssignRole" asp-route-id="@user.Id">Set Role</a> |
                @if (!user.Block)
                {
                    <a asp-page="InvertBlockStatus" asp-route-userId="@user.Id" asp-route-email = "@user.Email"
                       asp-route-status = "true">Block</a>
                }
                else
                {
                    <a asp-page="InvertBlockStatus" asp-route-userId="@user.Id" asp-route-email = "@user.Email"
                       asp-route-status = "false">Unblock</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>