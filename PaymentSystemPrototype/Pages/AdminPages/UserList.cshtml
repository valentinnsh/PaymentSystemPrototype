@page
@model PaymentSystemPrototype.Pages.Profiles.UserList

@{
    Layout = "Shared/_Layout";
}
<h2>User List</h2>
<table class="w3-table w3-striped">
    <thead>
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
        <th>
            Register date
        </th>
        <th>
            Actions
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.ListUsers) {
        <tr>
            <td>
               @user.FirstName
            </td>
            <td>
                @user.LastName
            </td>
            <td>
                @user.Email
            </td>
            <td>
                
            </td>
            <td>
                @user.RegisteredAt
            </td>
            <td>
                <a asp-page="ModifyData" asp-route-email="@user.Email" >Edit Data</a> |
                <a asp-page="AssignRole" >Set Role</a> |
                <a asp-page="BlockUser" >Block</a>
            </td>
        </tr>
    }
    </tbody>
</table>