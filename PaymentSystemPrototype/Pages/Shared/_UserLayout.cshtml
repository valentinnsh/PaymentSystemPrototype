<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="row">
            <ul class="nav navbar-nav">
                @if (Context.User.Identity.IsAuthenticated)
                {
                    <li><a asp-page="/Profiles/UserProfile">Profile</a></li>
                    <li><a asp-page="/Profiles/TransferList">Transfers</a></li>
                    <li><a asp-page="/Profiles/LogOut">LogOut</a></li>
                }
                else
                {
                    <li><a asp-page="/Auth/LogIn">Log In</a></li>
                    <li><a asp-page="/Auth/SignUp">Sign Up</a></li>
                }
            </ul>
        </div>
    </div>
</nav>


<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; 2022</p>
    </footer>
</div>
</body>
</html>